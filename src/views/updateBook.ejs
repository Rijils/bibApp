          <form action="/books/singlebook/updatedNewbook/<%= bookDetails._id %>"  method="post" > 
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Fname">Book Name</label>
                    <input type="text" class="form-control" placeholder="First name" id="Fname" name="bookname" value="<%= bookDetails.bookname %>">
                  </div>
              <div class="form-group col-md-6">

               
                    <label for="inputCity">Author Name</label>
                    <input type="text" class="form-control" id="inputCity" name="authorname" >
               
                
              </div>
             
            </div>
            <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputAddress ">Book Description</label>
              <input type="text" class="form-control" id="inputAddress" name="bookdesc"  value="<%= bookDetails.bookdesc %>">
            </div>
            <div class="form-group col-md-6">

                <label >Language</label> <br>
                <input type="radio" class="form-check-input" id="radio1"  value="English" checked name="language"> English
                <label class="form-check-label" for="radio1"></label>

                <input type="radio" class="form-check-input" id="radio2"  value="Hindi" name="language"> Hindi
                <label class="form-check-label" for="radio2"></label>

                <input type="radio" class="form-check-input" id="radio3"  value="Malayalam" name="language"> Malayalam
                <label class="form-check-label" for="radio3"></label>

                <input type="radio" class="form-check-input" id="radio4"  value="Other" name="language"> Other
                <label class="form-check-label" for="radio4"></label>

              </div></div>

            <div class="form-row col-md-12">
              <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email" value="<%= bookDetails.email %>">
              </div>
              <div class="form-group col-md-4">
                <label for="inputState">Country</label>
                <select id="inputState" class="form-control" name="country">

                  <% if ( bookDetails.country  == "INDIA") { %>
                    <option value="INDIA" selected>india</option>
                    <% } else { %>
                      <option value="GERMANY" >GERMANY</option>
                      <% } %>
                  <!-- <option value="INDIA"selected>india</option>
                  <option value="USA">usa</option>
                  <option value="UK">uk</option>
                  <option value="GERMANY">Germany</option> -->
